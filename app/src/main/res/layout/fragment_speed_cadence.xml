        <TextView
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/speed"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_gravity="center"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/min_value_text"
                tools:text="20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/start_speed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:text="Km/h"/>

        <com.innovattic.rangeseekbar.RangeSeekBar
            app:rsb_minThumbDrawable="@drawable/thumb_circle"
            app:rsb_maxThumbDrawable="@drawable/thumb_circle"
            app:rsb_trackThickness="3dp"
            app:rsb_trackSelectedThickness="3dp"
            app:rsb_trackColor="#D3D3D3"
            app:rsb_trackSelectedColor="@color/colorPrimaryDark"
            android:layout_margin="8dp"
            android:id="@+id/rangebar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:rsb_minRange="20"
            android:layout_weight="1"
            app:rsb_max="80" />

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:layout_gravity="center_vertical"
                tools:text="50"
                android:id="@+id/max_value_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/top_speed_text"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                tools:text="Km/h"/>
        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/linear_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>


